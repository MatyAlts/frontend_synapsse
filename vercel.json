{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "MERCADOPAGO_ACCESS_TOKEN": "@mercadopago_token",
    "NEXT_PUBLIC_API_URL": "@api_url",
    "NEXT_PUBLIC_APP_URL": "@app_url",
    "NEXT_PUBLIC_CHAT_WEBHOOK_URL": "@chat_webhook_url",
    "NEXT_PUBLIC_COUPON_WEBHOOK_URL": "@coupon_webhook_url",
    "NEXT_PUBLIC_WHATSAPP_NUMBER": "@whatsapp_number"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
